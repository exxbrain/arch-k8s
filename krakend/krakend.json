{
  "version": 2,
  "name": "KrakenD on k8s",
  "port": 8080,
  "cache_ttl": "3600s",
  "timeout": "3s",
  "host": [
    "http://krakend-service"
  ],
  "extra_config": {
    "github_com/devopsfaith/krakend-gologging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": true,
      "stdout": true
    },
    "github_com/devopsfaith/krakend-opencensus": {
      "exporters": {
        "prometheus": {
          "port": 9091,
          "namespace": "monitoring"
        }
      }
    }
  },
  "endpoints": [
    {
      "endpoint": "/users/register",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/auth/realms/arch/register",
          "method": "POST",
          "host": [
            "http://keycloak-http"
          ]
        }
      ]
    },
    {
      "endpoint": "/auth/{param1}",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/auth/realms/arch/protocol/openid-connect/{param1}",
          "method": "POST",
          "host": [
            "http://keycloak-http"
          ]
        }
      ]
    },
    {
      "endpoint": "/some-service/{param}",
      "headers_to_pass": [
        "*"
      ],
      "extra_config": {
        "github.com/devopsfaith/krakend-jose/validator": {
          "alg": "RS256",
          "jwk-url": "http://keycloak-http/auth/realms/arch/protocol/openid-connect/certs",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/me",
          "host": [
            "http://profile-service.app.svc.cluster.local:8080"
          ]
        }
      ]
    }
  ]
}